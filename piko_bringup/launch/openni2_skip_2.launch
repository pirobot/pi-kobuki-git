<launch>

  <!-- Reduce the frame rate at the driver level. A value of 2 is approximately 10 FPS -->
  <param name="/camera/driver/data_skip" value="2" />
  <param name="/camera/driver/depth_mode" value="5" />
  <param name="/camera/driver/ir_mode" value="5" />
  <param name="/camera/driver/color_mode" value="5" />

  <include file="$(find openni2_launch)/launch/openni2.launch">
      <arg name="camera" value="camera"/>
      <arg name="device_id" value="#1"/>
      <arg name="depth_registration" default="true"/>
  </include>
      
</launch>