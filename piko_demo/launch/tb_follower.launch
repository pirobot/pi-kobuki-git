<launch>
  <include file="$(find piko_bringup)/launch/twist_velocity_smoother.launch" />

  <!--  Load turtlebot follower into the 3d sensors nodelet manager to avoid pointcloud serializing -->
  <node pkg="nodelet" type="nodelet" name="turtlebot_follower"
          args="load turtlebot_follower/TurtlebotFollower camera/camera_nodelet_manager">
    <remap from="turtlebot_follower/cmd_vel" to="twist_velocity_smoother/twist_raw_cmd_vel"/>
    <remap from="depth/points" to="camera/depth_registered/points"/>
    <param name="enabled" value="true" />
    <param name="x_scale" value="2.0" />
    <param name="z_scale" value="3.0" />
    <param name="min_x" value="-0.35" />
    <param name="max_x" value="0.35" />
    <param name="min_y" value="-0.5" />
    <param name="max_y" value="0.5" />
    <param name="max_z" value="1.7" />
    <param name="goal_z" value="0.8" />
  </node>

</launch>
