<launch>

  <arg name="input_cloud" default="/camera/depth_registered/points" />
  
  <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />

  <!-- Run a VoxelGrid filter on the z axis -->
  <node pkg="nodelet" type="nodelet" name="voxel_grid_z" args="load pcl/VoxelGrid pcl_manager" output="screen" respawn="true">
    <remap from="~input" to="$(arg input_cloud)" />
    <remap from="~output" to="/z_filtered" />
    <rosparam>
      filter_field_name: z
      filter_limit_min: 0.6
      filter_limit_max: 2.0
      filter_limit_negative: False
      leaf_size: 0.02
    </rosparam>
  </node>
  
  <!-- Run a passthrough filter on the x axis -->
  <node pkg="nodelet" type="nodelet" name="passthrough_x" args="load pcl/PassThrough pcl_manager" output="screen" respawn="true">
    <remap from="~input" to="/z_filtered" />
    <remap from="~output" to="/x_filtered" />
    <rosparam>
      filter_field_name: x
      filter_limit_min: -0.75
      filter_limit_max: 0.75
      filter_limit_negative: False
    </rosparam>
  </node>
  
  <!-- Run a passthrough filter on the y axis -->
  <node pkg="nodelet" type="nodelet" name="passthrough_y" args="load pcl/PassThrough pcl_manager" output="screen" respawn="true">
    <remap from="~input" to="/x_filtered" />
    <remap from="~output" to="/search_cloud" />
    <rosparam>
      filter_field_name: y
      filter_limit_min: -1.0
      filter_limit_max: 0.5
      filter_limit_negative: False
    </rosparam>
  </node>
  
  <node pkg="jr_vision" name="pointcloud_cog" type="nodelet_pointcloud_cog.py" output="screen" clear_params="true" respawn="true">
    <remap from="point_cloud" to="search_cloud" />
    <param name="min_points" value="750" />
  </node>
</launch>